@model RoleCreateViewModel
@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Areas/Admin/Views/Shared/Main_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center" style="margin-top:20px;">Role Oluşturma</h2>
        <form asp-action="RoleCreate" asp-area="Admin" asp-controller="Role" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="mt-3">
                    <a class="btn btn-outline-secondary" asp-action="RoleList" asp-area="Admin" asp-controller="Role">Role Listesine Geri Dön</a>
                </div>
            </div>
        </form>
    </div>
</div>

